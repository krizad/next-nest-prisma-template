# ===================================
# Frontend Environment Variables
# ===================================
# Copy this file to .env.local and update values as needed

# API Configuration
# The API base URL - defaults to /api which is proxied to backend via Next.js rewrites
# In development: /api proxies to http://localhost:8080/api/v1
# In production: Set this to your backend URL if not using rewrites
NEXT_PUBLIC_API_BASE_URL=/api

# Backend URL for Next.js rewrites (server-side)
# Only used during development for the rewrite configuration
NEXT_PUBLIC_BACKEND_URL=http://localhost:8080

# API timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT=30000

# Application Configuration
NEXT_PUBLIC_APP_NAME="Full-Stack App"
